{% extends 'StefDagVanDeWeekBundle::layout.html.twig' %}

{% block content %}
    <div class="row">
        <article class="col-sm-9 maincontent">
            <header class="page-header">
                <h1 class="page-title">{{ page.title }}</h1>
                <span>Het dagelijkse nieuws van {{ page.created|date("d/m/Y") }}</span>
            </header>

            {{ page.body|raw }}
        </article>
    </div>

{% endblock %}