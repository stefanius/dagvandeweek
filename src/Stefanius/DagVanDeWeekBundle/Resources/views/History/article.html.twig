{% extends "StefaniusDagVanDeWeekBundle::layout.html.twig" %}

{% block content %}
    <div class="row">
        <article class="col-sm-9 maincontent">
            <header class="page-header">
                <h1 class="page-title">{{ page.title }}</h1>
            </header>

            {{ page.body|raw }}
            {% include 'StefSimpleCmsBundle:GoogleAdsense:728x90.html.twig' with {'pubid': 'ca-pub-1143505562670221', 'slotid': '4350506819'} %}
            <h2>Dag van de week</h2>
            <p>Deze gebeurtenis vond plaats op <a href="/historie/{{ page.year }}/{{ "%02d"|format(page.month) }}/{{ "%02d"|format(page.day) }}">{{ dayInfo.formatLocalized('%A %d %B %Y') }}</a>. Deze dag viel in week {{ dayInfo.weekOfYear }} van dat jaar.</p>
            <p>{{ dayInfo.formatLocalized('%d %B') }} was dag {{ dayInfo.dayOfYear }} in {{ page.year }}. Het zou nog {{ 365 - dayInfo.dayOfYear }} dagen duren tot {{ page.year + 1 }} kon beginnen.</p>
        </article>

        <aside class="col-sm-3 sidebar sidebar-right">
            <div class="widget">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- responsive -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-1143505562670221"
                     data-ad-slot="2674477613"
                     data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        </aside>
    </div>
{% endblock %}